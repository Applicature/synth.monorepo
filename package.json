{
  "name": "applicature.monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "devDependencies": {
    "@types/jest": "^23.3.7",
    "@types/node": "^10.12.0",
    "jest": "^23.6.0",
    "jest-cli": "^20.0.4",
    "jest-junit": "^3.6.0",
    "jest-multi-test-result-processor": "^1.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lerna": "^3.4.3",
    "sonarqube-scanner": "^2.1.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "author": "Andrew Zubko <andrew@applicature.com>",
  "license": "UNLICENSED",
  "scripts": {
    "lint": "tslint packages/**/*.ts",
    "precommit": "npm run lint ; npm run test:ci",
    "test": "jest",
    "test:ci": "jest --coverage --forceExit",
    "test:lint": "tslint --force -t json --project ./tsconfig.json packages/**/*.ts",
    "test:sonar": "sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=$SYNTH_BACKEND_SONARCLOUD_TOKEN"
  },
  "jest-multi-test-result-processor": {
    "processors": [
      "jest-junit",
      "jest-sonar-reporter"
    ]
  },
  "jestSonar": {
    "reportPath": "./test-reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest-junit": {
    "output": "./test-reports/junit.xml"
  }
}
