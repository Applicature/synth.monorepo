{
  "name": "@applicature/multivest.mongodb",
  "version": "0.2.0",
  "private": false,
  "license": "UNLICENSED",
  "description": "MongoDB Plugin",
  "author": "Andrew Zubko <andrew@applicature.com>",
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11",
    "yarn": ">=0.20.3"
  },
  "scripts": {
    "build": "gulp build",
    "lint": "tslint '{src/**/*.ts,test/**/*.ts}'",
    "precommit": "npm run lint ; npm run test:coverage ; npm run test:security",
    "test": "jest test/unit",
    "test:coverage": "jest test/unit --coverage --collectCoverageFrom=*/**/*.ts",
    "test:integration": "jest test/integration",
    "test:ci": "jest test/unit --coverage --testResultsProcessor ./node_modules/jest-junit --collectCoverageFrom=*/**/*.ts",
    "test:security": "nsp check"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.com:applicature/multivest.mongodb.git"
  },
  "dependencies": {
    "@applicature/multivest.core": "^0.1.24",
    "config": "^1.30.0",
    "jest-cli": "^22.4.3",
    "mongodb": "^2.2.35",
    "uuid": "^3.2.1",
    "winston": "^2.4.1"
  },
  "files": [
    "dist/",
    "src/",
    "index.d.ts",
    "index.js"
  ],
  "devDependencies": {
    "@types/agenda": "^1.0.2",
    "@types/config": "0.0.33",
    "@types/jest": "^22.2.2",
    "@types/mongodb": "^2.2.20",
    "@types/node": "^8.10.1",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.8",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^3.2.4",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-junit": "^3.6.0",
    "mongo-mock": "^3.1.0",
    "nsp": "^3.2.1",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/.*?\\.d\\.ts$"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "cobertura"
    ]
  },
  "jest-junit": {
    "output": "./coverage/junit.xml"
  }
}
