{
  "name": "@applicature-private/applicature-sdk.mongodb",
  "version": "2.0.0",
  "private": false,
  "license": "UNLICENSED",
  "description": "MongoDB Plugin",
  "author": "Andrew Zubko <andrew@applicature.com>",
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11",
    "yarn": ">=0.20.3"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "gulp clean && gulp build",
    "lint": "tslint '{index.ts,src/**/*.ts,test/**/*.ts}'",
    "precommit": "npm run lint ; npm run test:ci",
    "test": "jest",
    "test:ci": "jest --coverage --forceExit",
    "test:sonar": "sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=$SYNTH_BACKEND_SONARCLOUD_TOKEN",
    "test:lint": "tslint --force --out ./test-reports/tslint.json -t json --project ./tsconfig.json '{index.ts,src/**/*.ts,test/**/*.ts}'"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.com:applicature/multivest.mongodb.git"
  },
  "dependencies": {
    "@applicature-private/applicature-sdk.plugin-manager": "^2.0.0",
    "@types/lodash": "^4.14.116",
    "bignumber.js": "^7.2.1",
    "config": "^1.30.0",
    "lodash": "^4.17.11",
    "mongodb": "^2.2.35",
    "uuid": "^3.2.1",
    "winston": "^2.4.1"
  },
  "files": [
    "dist/",
    "src/",
    "index.d.ts",
    "index.js"
  ],
  "devDependencies": {
    "@types/config": "0.0.34",
    "@types/jest": "^23.3.3",
    "@types/joi": "^13.6.0",
    "@types/mongodb": "^3.1.12",
    "@types/node": "^10.11.4",
    "@types/uuid": "^3.4.4",
    "@types/winston": "^2.4.4",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^5.0.0-alpha.3",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-cli": "^20.0.4",
    "jest-junit": "^5.2.0",
    "jest-multi-test-result-processor": "^1.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "mongo-mock": "^3.1.0",
    "sonarqube-scanner": "^2.1.1",
    "ts-node": "^4.1.0",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "jest-multi-test-result-processor": {
    "processors": [
      "jest-junit",
      "jest-sonar-reporter"
    ]
  },
  "jestSonar": {
    "reportPath": "./test-reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest-junit": {
    "output": "./test-reports/junit.xml"
  }
}
