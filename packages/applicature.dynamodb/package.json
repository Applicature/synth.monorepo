{
  "name": "multivest.dynamodb",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "gulp build",
    "lint": "tslint '{src/**/*.ts,test/**/*.ts}'",
    "precommit": "npm run lint ; npm run test:integration",
    "test": "jest",
    "test:integration": "jest test/integration --coverage ./node_modules/jest-junit --collectCoverageFrom=*/**/*.ts",
    "test:lint": "tslint --force -t json --project ./tsconfig.json 'src/**/*.{ts,tsx}'",
    "test:sonar": "sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=$SYNTH_BACKEND_SONARCLOUD_TOKEN"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/applicature/multivest.dynamodb.git"
  },
  "author": "Michael Sukhroukov <mikhail.sukhorukov@applicature.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "@applicature-private/multivest.core": "^2.0.6",
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "aws-sdk": "^2.328.0",
    "dynamodb": "^1.1.2",
    "joi": "^13.7.0",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  },
  "files": [
    "dist/",
    "src/",
    "index.d.ts",
    "index.js"
  ],
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/config": "0.0.34",
    "@types/jest": "^23.3.3",
    "@types/joi": "^13.6.0",
    "@types/node": "^10.11.4",
    "@types/uuid": "^3.4.4",
    "@types/winston": "^2.4.4",
    "agenda": "^2.0.2",
    "faker": "^4.1.0",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^5.0.0-alpha.3",
    "jest": "^23.6.0",
    "jest-cli": "^20.0.4",
    "jest-junit": "^5.2.0",
    "jest-multi-test-result-processor": "^1.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "sonarqube-scanner": "^2.1.1",
    "ts-jest": "^23.10.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/.*?\\.d\\.ts$"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "cobertura"
    ]
  },
  "moduleDirectories": [
    "node_modules",
    "bower_components",
    "shared",
    "@types"
  ],
  "jest-junit": {
    "output": "./coverage/junit.xml"
  }
}
